@model fly.Models.Insurance
@{
    ViewData["Title"] = "Редактировать страхование";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="InsuranceId" />
    <div class="form-group">
        <label asp-for="ExhibitId"></label>
        <select asp-for="ExhibitId" class="form-control" asp-items="ViewBag.ExhibitId"></select>
    </div>
    <div class="form-group">
        <label asp-for="InsuranceCompany"></label>
        <input asp-for="InsuranceCompany" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PolicyNumber"></label>
        <input asp-for="PolicyNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label asp-for="CoverageAmount"></label>
        <input asp-for="CoverageAmount" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Сохранить</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>