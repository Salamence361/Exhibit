@model fly.Models.Movement

@{
    ViewData["Title"] = "Редактировать перемещение";
}

<h1>Редактировать перемещение</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MovementId" />
            <div class="form-group">
                <label asp-for="ExhibitId" class="control-label"></label>
                <select asp-for="ExhibitId" class="form-control" asp-items="ViewBag.ExhibitId"></select>
                <span asp-validation-for="ExhibitId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FromStorageLocationId" class="control-label"></label>
                <select asp-for="FromStorageLocationId" class="form-control" asp-items="ViewBag.FromStorageLocationId"></select>
                <span asp-validation-for="FromStorageLocationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ToStorageLocationId" class="control-label"></label>
                <select asp-for="ToStorageLocationId" class="form-control" asp-items="ViewBag.ToStorageLocationId"></select>
                <span asp-validation-for="ToStorageLocationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MovementDate" class="control-label"></label>
                <input asp-for="MovementDate" class="form-control" />
                <span asp-validation-for="MovementDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <input asp-for="Notes" class="form-control" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}