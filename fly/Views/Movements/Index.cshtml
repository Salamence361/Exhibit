@model IEnumerable<fly.Models.Movement>
@{
    ViewData["Title"] = "Перемещения экспонатов";
    var isPdf = Context.Request.Query["isPdf"].ToString() == "true";
}

@if (!isPdf)
{
    <h1>Журнал перемещений экспонатов</h1>

    <form id="filterForm" method="get" asp-action="Index" class="mb-3">
        <div class="form-row align-items-end">
            <div class="form-group col-md-4">
                <label>Экспонат:</label>
                <select name="exhibitId" class="form-control">
                    <option value="">Все</option>
                    @foreach (var exhibit in ((SelectList)ViewBag.Exhibits).Items.Cast<fly.Models.Exhibit>())
                    {
                        var isSelected = Context.Request.Query["exhibitId"] == exhibit.ExhibitId.ToString();
                        //<option value="@exhibit.ExhibitId" @(isSelected ? "selected" : "")>@exhibit.ExhibitName</option>
                    }
                </select>
            </div>
            <div class="form-group col-md-4">
                <label>Дата перемещения (с):</label>
                <input type="date" id="startDate" name="startDate" class="form-control" value="@Context.Request.Query["startDate"]" />
            </div>
            <div class="form-group col-md-4">
                <label>Дата перемещения (по):</label>
                <input type="date" id="endDate" name="endDate" class="form-control" value="@Context.Request.Query["endDate"]" />
            </div>
        </div>

        <div class="form-row mt-3">
            <div class="form-group col-md-12">
                <button type="submit" class="btn btn-primary mr-2">Фильтровать</button>
                <button type="button" class="btn btn-secondary" onclick="clearFilters()">Очистить фильтры</button>
            </div>
        </div>
    </form>

    <p>
        <a asp-action="DownloadPdf"
           asp-route-startDate="@Context.Request.Query["startDate"]"
           asp-route-endDate="@Context.Request.Query["endDate"]"
           asp-route-exhibitId="@Context.Request.Query["exhibitId"]"
           asp-route-isPdf="true"
           class="btn btn-danger">Скачать отчет в PDF</a>
    </p>
}

<h1>Журнал перемещений экспонатов</h1>

<table class="table">
    <thead>
        <tr>
            <th>Экспонат</th>
            <th>Из хранилища</th>
            <th>В хранилище</th>
            <th>Дата перемещения</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@(item.Exhibit?.ExhibitName ?? "-")</td>
                <td>@(item.FromStorageLocation?.Name ?? "-")</td>
                <td>@(item.ToStorageLocation?.Name ?? "-")</td>
                <td>@item.MovementDate.ToString("dd.MM.yyyy HH:mm")</td>
            </tr>
        }
    </tbody>
</table>

<div class="footer">
    <p>Сформировано @DateTime.Now.ToString("dd MMMM yyyy")</p>
</div>

@if (!isPdf)
{
    @section Scripts {
        <script>
            function clearFilters() {
                document.getElementById('startDate').value = '';
                document.getElementById('endDate').value = '';
                document.getElementsByName('exhibitId')[0].selectedIndex = 0;
                document.getElementById('filterForm').submit();
            }
        </script>
    }
}