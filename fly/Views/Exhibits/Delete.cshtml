@model fly.Models.Exhibit

@{
    ViewData["Title"] = "Delete";
}

<h1>Удаление</h1>

<<h3>Вы уверены, что хотите удалить этот экспонат?</h3>
<div>
    
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ExhibitName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ExhibitName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ExhibitDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ExhibitDescription)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreationDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreationDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Material)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Material)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Size)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Size)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Weight)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Weight)
        </dd>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.LogoPath))
            {
                <img src="@Model.LogoPath" alt="Логотип" width="200" />
            }
        </dd>
    </dl>
    
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="ExhibitId" />
        <input type="hidden" name="brandId" value="@ViewBag.CategoryId" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index" asp-route-brandId="@ViewBag.BrandId">Вернуться к списку</a>
    </form>

</div>
