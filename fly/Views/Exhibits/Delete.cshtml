@model fly.Models.Exhibit

@{
    ViewData["Title"] = "Удаление экспоната";
}

<h1>Удаление экспоната</h1>

<h3>Вы уверены, что хотите удалить этот экспонат?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-9">
            @Model.Category?.Name
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.ExhibitName)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.ExhibitName)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.ExhibitDescription)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.ExhibitDescription)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.CreationDate)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.CreationDate)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Material)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Material)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Size)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Size)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Weight)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Weight)
        </dd>
        <dt class="col-sm-3">
            Логотип
        </dt>
        <dd class="col-sm-9">
            @if (!string.IsNullOrEmpty(Model.LogoPath))
            {
                <img src="@Model.LogoPath" alt="Логотип" width="200" />
            }
        </dd>
    </dl>

    <form asp-action="Delete" asp-route-categoryId="@ViewBag.CategoryId" method="post">
        <input type="hidden" asp-for="ExhibitId" />
        <input type="hidden" name="categoryId" value="@ViewBag.CategoryId" />
        <button type="submit" class="btn btn-danger">Удалить</button>
        <a asp-action="Index" asp-route-categoryId="@ViewBag.CategoryId" class="btn btn-secondary">Вернуться к списку</a>
    </form>
</div>