@model IEnumerable<fly.Models.StorageLocation>
@{
    ViewData["Title"] = "Места хранения";
}
<h1>Места хранения</h1>
<p>
    <a asp-action="Create" class="btn btn-primary">Добавить место хранения</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.Name)</th>
            <th>@Html.DisplayNameFor(m => m.Description)</th>
            <th>@Html.DisplayNameFor(m => m.Address)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Address</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.StorageLocationId">Редактировать</a> |
                    <a asp-action="Details" asp-route-id="@item.StorageLocationId">Детали</a> |
                    <a asp-action="Delete" asp-route-id="@item.StorageLocationId">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>