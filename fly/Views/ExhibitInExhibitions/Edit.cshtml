@model fly.Models.ExhibitInExhibition

@{
    ViewData["Title"] = "Редактировать экспонат на выставке";
}

<h2>Редактировать экспонат на выставке</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="ExhibitInExhibitionId" />
    <input type="hidden" asp-for="ExhibitionId" />
    <div class="form-group">
        <label asp-for="ExhibitId" class="control-label">Экспонат</label>
        <select asp-for="ExhibitId" class="form-control" asp-items="ViewBag.ExhibitId"></select>
        <span asp-validation-for="ExhibitId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PlacementDate" class="control-label"></label>
        <input asp-for="PlacementDate" class="form-control" />
        <span asp-validation-for="PlacementDate" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
    <a asp-controller="Exhibitions" asp-action="Details" asp-route-id="@Model.ExhibitionId" class="btn btn-secondary">Назад</a>
</form>