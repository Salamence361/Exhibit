@{
    ViewData["Title"] = "Домашняя страница";
}

<div class="text-center">
    <h1 class="display-4">Добро пожаловать в музей</h1>
    <p class="lead">Чувашский государственный художественный музей.</p>
   
</div>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <div class="card">

                <div class="card-body">
                    <h5 class="card-title">Категории</h5>
                    <p class="card-text">Список всех категорий.</p>
                    <a asp-controller="Categories" asp-action="Index" class="btn btn-primary">Все категории</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">

                <div class="card-body">
                    <h5 class="card-title">Выставки</h5>
                    <p class="card-text">Список Выставок.</p>
                    <a asp-controller="Exhibitions" asp-action="Index" class="btn btn-primary">Выставки</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">

                <div class="card-body">
                    <h5 class="card-title">Посетители</h5>
                    <p class="card-text">Информация о посетителях.</p>
                    <a asp-controller="Visitors" asp-action="Index" class="btn btn-primary">Посетители</a>
                </div>
            </div>
        </div>
    </div>
</div>