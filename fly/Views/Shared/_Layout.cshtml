<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Инвентаризация музейных экспонатов</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/fly.styles.css" asp-append-version="true" />
    <style>
        body {
            background-color: #f0f8ff; /* Светло-голубой фон, ассоциирующийся с больницей */
        }

        .navbar {
            background-color: #e3f2fd; /* Светло-голубая навигационная панель ПЕРЕДЕЛАТЬ ВСЁ В БЕЖЕВЫЙ*/
        }

        .footer {
            background-color: #e3f2fd; /* Светло-голубой футер */
        }

        .navbar-brand, .nav-link {
            color: #000 !important; /* Черный цвет текста для ссылок */
        }

        .btn-primary {
            background-color: #007bff; /* Синий цвет кнопок */
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }

        .navbar-brand img {
            height: 40px; /* Устанавливаем высоту логотипа */
            width: auto; /* Автоматическая ширина для сохранения пропорций */
        }
    </style>
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
            
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Домой</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark"><strong>Учет музейных экспонатов</strong></a>
                        </li>


                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Museums" asp-action="Index">Музеи</a>
                        </li>

                        
                      
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Exhibitions" asp-action="Index">Выставки</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Visitors" asp-action="Index">Посетители</a>
                        </li>
                        @if (User.IsInRole("IT"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="CustomUser" asp-action="Index">Пользователи</a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Васильев Михаил Андреевич
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
