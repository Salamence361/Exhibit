@model IEnumerable<fly.Models.Category>

@{
    ViewData["Title"] = "Список категорий экспонатов";
}

<h1>Список категорий экспонатов</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Добавить новую категорию экспоната</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3 mb-4">
            <div class="brand-card position-relative">
                @if (!string.IsNullOrEmpty(item.LogoPath))
                {
                    <div class="brand-logo-container">
                        <img src="@item.LogoPath" alt="Логотип" class="img-fluid brand-logo" />
                    </div>
                }
                <div class="brand-info position-absolute top-0 start-0 w-100 h-100 d-flex flex-column justify-content-center align-items-center text-center">
                    <h5>@item.Name</h5>
                    <a asp-controller="Exhibits" asp-action="Index" asp-route-id="@item.CategoryId" class="btn btn-sm btn-primary mb-2">Экспонаты</a>
                    <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-sm btn-warning mb-2">Редактировать</a>
                    <a asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-sm btn-danger">Удалить</a>
                </div>
            </div>
        </div>
    }
</div>
<p>
    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Назад</a>
</p>
@section Styles {
    <style>
        .brand-card {
            overflow: hidden;
            border: 1px solid #ddd;
            border-radius: 5px;
            transition: transform 0.3s;
            position: relative;
            height: 200px; 
        }

            .brand-card:hover {
                transform: scale(1.05);
            }

        .brand-logo-container {
            width: 100%;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            overflow: hidden;
        }

        .brand-logo {
            max-width: 100%;
            max-height: 100%;
            transition: filter 0.3s;
        }

        .brand-card:hover .brand-logo {
            filter: blur(5px);
        }

        .brand-info {
            background-color: rgba(255, 255, 255, 0.8);
            opacity: 0;
            transition: opacity 0.3s;
        }

        .brand-card:hover .brand-info {
            opacity: 1;
        }
    </style>
}