@model IEnumerable<fly.Models.Category>

@{
    ViewData["Title"] = "Index";
}



<p>
    <a asp-action="Create">Добавить новую категорию</a>
</p>
<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                Количество экспонатов
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>


                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @item.Exhibit.Count()
                </td>
                <td>
                    <a asp-controller="Exhibits" asp-action="Index" asp-route-categoryId="@item.CategoryId">Экспонаты</a>
                    <a asp-action="Edit" asp-route-id="@item.CategoryId">Редактировать</a> |
                    <a asp-action="Details" asp-route-id="@item.CategoryId">Просмотр</a> |
                    <a asp-action="Delete" asp-route-id="@item.CategoryId">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
